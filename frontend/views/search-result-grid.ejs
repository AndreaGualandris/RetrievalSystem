
<% query_results.forEach((result) => { %>
    <section id="<%= result.id %>" data-id="<%= result.id %>" class="search_result_grid" >
        <a class="search_result_image" onclick="href = '<%= result.urlHouse %>'" target="_blank">
            <img src="<%= result.urlImage %>" alt="image">
        </a>

        <section class="search_result_title">
            <div class="title_container"><span><%= result.title %></span></div>
            <div class="address_container"><span class="search_result_address"><%= result.address %></span></div>
        </section>

        

        <section class="main_info">
            <section class="label">
                <p><span>City:</span></p> 
                <p><span>State:</span></p> 
                <p><span>Price:</span></p> 
                <p><span>Bed:</span></p> 
            </section>
            <section class="values">
                <p><span> <%= result.city %></span></p>
                <p><span><%= result.state %></span></p>
                <p><span> <%= result.price %></span></p>
                <p><span> <%= result.beds %></span></p>
            </section>

        </section>

        <span class="similar_butt"><a href="#"></a></span>

        </section>
<% }); %> 

